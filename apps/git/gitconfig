[core]
    editor = nvim

[include]
    path = ~/.gitconfig.d/editor
    path = ~/.gitconfig.d/hubs
    path = ~/.gitconfig.d/sign
    path = ~/.gitconfig.d/town
    path = ~/.gitconfig.d/user

[merge]
    tool = vimdiff

[push]
    default = current

[color]
    ui = auto

[alias]
    tree = log --graph --decorate --pretty=oneline --abbrev-commit
    tpush = push --tags
    tpull = pull --tags
    amend = commit --amend

[init]
    defaultBranch = master

[url "git@github.com:"]
    pushInsteadOf = https://github.com/

[url "git@gist.github.com:"]
    pushInsteadOf = https://gist.github.com/

[url "ssh://aur@aur.archlinux.org/"]
    pushInsteadOf = https://aur.archlinux.org/
