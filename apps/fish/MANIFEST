prefix ~/.config/fish

symlink aliases
symlink completions
symlink conf.d
symlink config.fish
symlink functions
symlink login.bash
mkdir plugins

# https://github.com/jorgebucaran/fisher#using-your-fish_plugins-file
output_file fish_plugins

prefix ~
symlink .bashrc

if_missing ~/.local/share/fisher/conf.d/fzf.fish post_install_exec fish -c 'fisher install patrickf1/fzf.fish'
post_install_update fish -c 'fisher update'
