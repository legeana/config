#!/bin/sh

if whatis color 2>&1 >/dev/null
then
	color=color
else
	color=true
fi

# CONSTANTS
OVC='xvid'
OVCOPTS='-xvidencopts'
THREADS="1"
OVCOPTS_V=""
DEFOPTS=":vhq=4"
K_BITRATE="1"
DEINT="pp=fd"
ME_QUALITY="6"
VF=""
# END_CONSTANTS

#OUTPUT="$1"; shift;

exec 1<&2

while  getopts "hco:t:s:qb:k:p:m:d" arg
do
        case "$arg" in
		c) OVCOPTS_V="${OVCOPTS_V}:cartoon";;
		t) THREADS="${OPTARG}";;
	        o) OUTPUT="$OPTARG";;
		s) VF="${VF}:scale=${OPTARG}";;
		q) OVCOPTS_V="${OVCOPTS_V}:vhq=4";;
		b) BITRATE="$OPTARG";;
		k) K_BITRATE="$OPTARG";;
		p) PASS="$OPTARG";;
		m) ME_QUALITY="${OPTARG}";;
		d) VF="${VF}:${DEINT}";;
		h) ;;&
	        ?) printf "Usage: %s: [-c if cartoon (anime)] [-o output] [-t threads] [-s scale] [-q better quality ($DEFOPTS)] [-b bitrate] [-k size_mult [$K_BITRATE]] [-p pass [2]] [-m me_quality [6]] [-d deinterlacer [$DEINT]]\n" "$0" && exit 1 ;;
        esac
done
shift "$(echo "$OPTIND" - 1 | bc)"

#echo "[debug]: \$@=" "$@"

if [ -z "$ME_QUALITY" ]; then
	ME_QUALITY="6"
fi
if [ -z "$OAC" ]; then
	OAC='faac'
fi
if [ -z "$OVCOPTS_V" ]; then
	OVCOPTS_V="${DEFOPTS}:threads=${THREADS}"
else
	OVCOPTS_V="${OVCOPTS_V}:threads=${THREADS}"
fi
OVCOPTS_V="$OVCOPTS_V:me_quality=$ME_QUALITY"
if [ -z "$PASS" ]; then
	PASS="2"
fi
if [ "$VF" ]; then
	VF="-vf $(echo "$VF" | sed -r 's|^:||' )"
fi

LOGFILE=`mktemp`

if [ -z "$BITRATE" ]; then
	BITRATE="-$(du -skc "$@" | tail -n 1 | ssed -R 's|^(\d+)\s+.*$|\1|' | sed -r "s|^.*$|&*${K_BITRATE}|" | bc -ql | ssed -R 's|^(\d*)\D*\d*$|\1|')"
fi

echo "################################################################################################################################################"
echo "## Starting encoding video for pass=$PASS $(echo "$BITRATE/1000"|bc)M output: $OUTPUT"
echo "## for files " "$($color ltyellow blue)" "$@" "$($color off)"
echo "## with ${OVCOPTS} bitrate=${BITRATE}${OVCOPTS_V}"
echo "################################################################################################################################################"

print_head(){
	foreground="$1"
	shift
	background="$1"
	shift
	text="$@"
	fill="$(echo "$text" | sed -r 's|.|#|g')"
	echo "###${fill}###"
	echo "## $($color "$foreground" "$background" )$text$($color off) ##"
	echo "###${fill}###"
}


if [ "$PASS" = "1" ]; then
	mencoder -msgcolor -oac "$OAC" -ovc "$OVC" "$OVCOPTS" "bitrate=${BITRATE}${OVCOPTS_V}" $VF -o "$OUTPUT" "$@"
elif [ "$PASS" = "2" ]; then
	print_head ltyellow red First pass
	mencoder -msgcolor -oac "$OAC" -ovc "$OVC" "$OVCOPTS" "pass=1:bitrate=${BITRATE}${OVCOPTS_V}" -passlogfile "$LOGFILE" $VF -o /dev/null "$@"
	print_head ltyellow red Second pass
	mencoder -msgcolor -oac "$OAC" -ovc "$OVC" "$OVCOPTS" "pass=2:bitrate=${BITRATE}${OVCOPTS_V}" -passlogfile "$LOGFILE" $VF -o "$OUTPUT" "$@"
fi

rm -f "$LOGFILE"

